<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">

    <ImageView
        android:id="@+id/img_accback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/pattern002"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="365dp"
        android:layout_height="680dp"
        android:background="@drawable/card_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".55"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/lbl_myacc"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:fontFamily="@font/samsungsans_bold"
            android:text="My Account"
            android:textColor="@color/lightblue002"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.04" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_viewMember"
            android:layout_width="175dp"
            android:layout_height="145dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15"
            android:src="@mipmap/profileicon"
            android:elevation="10dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/txt_"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="245dp"
            android:drawableStart="@drawable/profile_icon"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_bg2"
            android:textSize="24dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/samsungsans_regular"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txt_contact_viewMemberADMIN"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="385dp"
            android:background="@drawable/edittext_bg2"
            android:textSize="24dp"
            android:drawableStart="@drawable/payment_icon"
            android:paddingLeft="10dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/samsungsans_regular"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txt_emergency_viewMemberADMIN"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="455dp"
            android:background="@drawable/edittext_bg2"
            android:textSize="24dp"
            android:drawableStart="@drawable/search_icon"
            android:paddingLeft="10dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/samsungsans_regular"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/txt_nic_viewMemberADMIN"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="525dp"
            android:background="@drawable/edittext_bg2"
            android:textSize="24dp"
            android:drawableStart="@drawable/logout_icon"
            android:paddingLeft="10dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/samsungsans_regular"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txt_email_viewMemberADMIN"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="315dp"
            android:background="@drawable/edittext_bg2"
            android:textSize="18dp"
            android:drawableStart="@drawable/check_icon"
            android:paddingLeft="10dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/samsungsans_regular"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_viewMemberADMIN"
            android:layout_width="145dp"
            android:layout_height="46dp"
            android:layout_marginTop="610dp"
            android:text="Button"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:fontFamily="@font/samsungsans_medium"
            android:background="@drawable/button_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>