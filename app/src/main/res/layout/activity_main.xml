<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/login_back">

    <ImageView
        android:id="@+id/img_login"
        android:layout_width="415dp"
        android:layout_height="320dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/gym_vector2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".35"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_wave"
        android:layout_width="415dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".35"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43"
        tools:ignore="MissingConstraints" />

    <!--<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bac_secondary"
        android:layout_width="380dp"
        android:layout_height="520dp"
        android:background="@drawable/radius_bg2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".69"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993"
        />-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bac_main"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:background="@drawable/radius_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".55"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993"
        />

    <EditText
        android:id="@+id/txt_username"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="  Username"
        android:textColorHint="#999999"
        android:paddingLeft="20dp"
        android:fontFamily="@font/samsungsans_regular"
        android:textColor="@color/blue001"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        android:background="@drawable/edittext_bg"
        android:drawableStart="@drawable/ic_baseline_account_box_24"
        android:elevation="15dp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/txt_pass"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Password"
        android:fontFamily="@font/samsungsans_regular"
        android:textColorHint="#999999"
        android:textColor="@color/blue001"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_username"
        app:layout_constraintVertical_bias="0.22"
        android:elevation="15dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="220dp"
        android:layout_height="51dp"
        android:text="Login"
        android:fontFamily="@font/samsungsans_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_pass"
        app:layout_constraintVertical_bias="0.55"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:elevation="10dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/lbl_forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="@color/blue001"
        android:fontFamily="@font/samsungsans_regular"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_pass"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.835" />

    <TextView
        android:id="@+id/lbl_welcome"
        android:layout_width="230dp"
        android:layout_height="58dp"
        android:fontFamily="@font/samsungsans_bold"
        android:text="Ds Gym"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />
        <!--app:layout_constraintTop_toBottomOf="@+id/img_login"-->


    <TextView
        android:id="@+id/lbl_fitness"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:fontFamily="@font/samsungsans_bold"
        android:text="Sign In"
        android:textColor="@color/blue001"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_login"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>