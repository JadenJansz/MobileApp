<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:background="@drawable/card_back"
    android:elevation="15dp"
    android:padding="18dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/row_member_avatar"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:src="@mipmap/profileicon"
        android:elevation="5dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/row_member_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/row_member_avatar"
        android:text="Title"
        android:textSize="24dp"
        android:textColor="@color/gray"
        android:fontFamily="@font/samsungsans_medium"/>

    <TextView
        android:id="@+id/row_member_email"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/row_member_avatar"
        android:fontFamily="@font/samsungsans_regular"
        android:text="Description"
        android:textColor="@color/lightgray"
        android:textSize="16dp" />

</RelativeLayout>